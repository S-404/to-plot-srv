{
  "compilerOptions": {
    /*  https://www.typescriptlang.org/tsconfig  */

    "target": "esnext",
    "types": ["vite/client"],
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react" ,


    "module": "esnext" ,
    "moduleResolution": "node",
    "noEmit": true ,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "skipLibCheck": true ,

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@processes/*": ["src/processes/*"],
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
    }
  },

  "include": [
    "src",
    "types/app.d.ts",
  ]
}
